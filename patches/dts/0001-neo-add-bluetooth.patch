From: Robert Nelson <robertcnelson@gmail.com>
Date: Thu, 17 Sep 2015 12:19:37 -0500
Subject: [PATCH] neo: add bluetooth

Signed-off-by: Robert Nelson <robertcnelson@gmail.com>
---
 arch/arm/boot/dts/imx6sx-udoo-neo.dtsi | 11 +++++++++++
 1 file changed, 11 insertions(+)

diff --git a/arch/arm/boot/dts/imx6sx-udoo-neo.dtsi b/arch/arm/boot/dts/imx6sx-udoo-neo.dtsi
index a3be251..476b29c 100644
--- a/arch/arm/boot/dts/imx6sx-udoo-neo.dtsi
+++ b/arch/arm/boot/dts/imx6sx-udoo-neo.dtsi
@@ -89,6 +89,17 @@
 //		};
 	};
 
+	kim {
+	        compatible = "kim";
+	        nshutdown_gpio = <49>;  // GPIO2_17 The wl8 driver expects gpio to be an integer, so gpio2_17 is (2-1)*32+17=49
+	        dev_name = "/dev/ttymxc2";
+	        flow_cntrl = <1>;
+	        baud_rate = <3000000>;
+	};
+
+	btwilink {
+	        compatible = "btwilink";
+	};
 };
 
 &cpu0 {
