From 26caf3522bb26d66ef5417217294671fbe58eb9a Mon Sep 17 00:00:00 2001
From: Robert Nelson <robertcnelson@gmail.com>
Date: Thu, 17 Sep 2015 15:44:42 -0500
Subject: [PATCH 71/97] apply backport SmPL patch
 collateral-evolutions/generic/0001-group-attr/0002-group_attr_bus.cocci

---
 backports/drivers/bcma/main.c | 10 ++++++++++
 backports/drivers/ssb/main.c  | 10 ++++++++++
 2 files changed, 20 insertions(+)

diff --git a/backports/drivers/bcma/main.c b/backports/drivers/bcma/main.c
index 9635f10..b57c5c5 100644
--- a/backports/drivers/bcma/main.c
+++ b/backports/drivers/bcma/main.c
@@ -62,7 +62,12 @@ static struct attribute *bcma_device_attrs[] = {
 	&dev_attr_class.attr,
 	NULL,
 };
+#if LINUX_VERSION_CODE >= KERNEL_VERSION(3,12,0)
 ATTRIBUTE_GROUPS(bcma_device);
+#else
+#define BP_ATTR_GRP_STRUCT device_attribute
+ATTRIBUTE_GROUPS_BACKPORT(bcma_device);
+#endif
 
 static struct bus_type bcma_bus_type = {
 	.name		= "bcma",
@@ -70,7 +75,11 @@ static struct bus_type bcma_bus_type = {
 	.probe		= bcma_device_probe,
 	.remove		= bcma_device_remove,
 	.uevent		= bcma_device_uevent,
+#if LINUX_VERSION_CODE >= KERNEL_VERSION(3,12,0)
 	.dev_groups	= bcma_device_groups,
+#else
+	.dev_attrs = bcma_device_dev_attrs,
+#endif
 };
 
 static u16 bcma_cc_core_id(struct bcma_bus *bus)
@@ -641,6 +650,7 @@ static int __init bcma_modinit(void)
 {
 	int err;
 
+	init_bcma_device_attrs();
 	err = bus_register(&bcma_bus_type);
 	if (err)
 		return err;
diff --git a/backports/drivers/ssb/main.c b/backports/drivers/ssb/main.c
index a48a743..cc38b3d 100644
--- a/backports/drivers/ssb/main.c
+++ b/backports/drivers/ssb/main.c
@@ -380,7 +380,12 @@ static struct attribute *ssb_device_attrs[] = {
 	&dev_attr_irq.attr,
 	NULL,
 };
+#if LINUX_VERSION_CODE >= KERNEL_VERSION(3,12,0)
 ATTRIBUTE_GROUPS(ssb_device);
+#else
+#define BP_ATTR_GRP_STRUCT device_attribute
+ATTRIBUTE_GROUPS_BACKPORT(ssb_device);
+#endif
 
 static struct bus_type ssb_bustype = {
 	.name		= "ssb",
@@ -391,7 +396,11 @@ static struct bus_type ssb_bustype = {
 	.suspend	= ssb_device_suspend,
 	.resume		= ssb_device_resume,
 	.uevent		= ssb_device_uevent,
+#if LINUX_VERSION_CODE >= KERNEL_VERSION(3,12,0)
 	.dev_groups	= ssb_device_groups,
+#else
+	.dev_attrs = ssb_device_dev_attrs,
+#endif
 };
 
 static void ssb_buses_lock(void)
@@ -1444,6 +1453,7 @@ static int __init ssb_modinit(void)
 
 	/* See the comment at the ssb_is_early_boot definition */
 	ssb_is_early_boot = 0;
+	init_ssb_device_attrs();
 	err = bus_register(&ssb_bustype);
 	if (err)
 		return err;
